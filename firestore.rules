rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Public can create a submission from the form
    match /submissions/{id} {
      allow create: if true;
      allow read, update, delete: if false;
    }
    // Only server writes results; no direct reads
    match /analysis/{id} {
      allow read: if false;
      allow write: if false; // server via Admin SDK ignores rules
    }
  }
}
